<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet"
          type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-3.5.1.min.js")"
            type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <h1><a href="/">ASP.NET MVC MUSIC STORE</a></h1>

        <ul id="navlist">
            @if (User.Identity.IsAuthenticated)
            {
                <li><a>Welcome @User.Identity.Name</a></li>
            }
            <li><a href="@Url.Content("~/")" id="current">Home</a></li>
            <li><a href="@Url.Content("~/Store/")">Store</a></li>
            <li>@await Component.InvokeAsync("CartSummary")</li>
            <li><a href="@Url.Content("~/StoreManager/")">Admin</a></li>
            @{
                Html.RenderPartial("_loginPartial");
            }
        </ul>
    </div>

    @await Component.InvokeAsync("GenreMenu")

    <div id="main">
        @RenderBody()
    </div>

    <div id="footer">
        built with <a href="http://asp.net/mvc">ASP.NET MVC 3</a>
    </div>
</body>
</html>
